<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".registration">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="Teacher Registration"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tech_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Registerbtn"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginBottom="136dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/teach_Cpass"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/Registerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tech_name"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Teacher Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/teach_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/teach_id"
        android:layout_width="313dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Teacher ID"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/teach_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/teach_email"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Teacher Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/teach_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/teach_pass"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/teach_Cpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>